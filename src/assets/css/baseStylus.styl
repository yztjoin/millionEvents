
.ext-border::after
  content ''
  width 200%
  height 200%
  position absolute
  top 0
  left 0
  -webkit-transform scale(0.5, 0.5)
  transform scale(0.5, 0.5)
  -webkit-transform-origin top left
  pointer-events none
body, ul, p
  margin 0px
  padding 0px
body, html
  width 100%
  height 100%
li
  list-style-type none
a
  text-decoration none
i
  font-style normal
.lfloat
  float left
.rfloat
  float right
.clearFloat::after
  content ''
  display inline-block
  clear both
.bigWeigh
  font-size 50px
  font-weight bold
.bigerWeigh
  font-size 40px
  font-weight bold
.biger
  color #333
  font-size 36px
  font-weight bold
